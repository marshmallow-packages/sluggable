{
    "name": "marshmallow/sluggable",
    "description": "Generate slugs when saving Eloquent models",
    "keywords": [
        "marshmallow",
        "laravel-sluggable"
    ],
    "homepage": "https://gitlab.com/marshmallow-packages/sluggable",
    "license": "MIT",
    "authors": [
        {
            "name": "Stef van Esch",
            "email": "stef@marshmallow.dev",
            "homepage": "https://marshmallow.dev",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/database": "^7.0|^8.0",
        "illuminate/support": "^7.0.5|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Marshmallow\\Sluggable\\": "src"
        }
    },
    "autoload-dev": {
	    "psr-4": {
	     	"Marshmallow\\Sluggable\\Tests\\": "tests"
	    }
	 },
    "scripts": {
	    "test": "vendor/bin/phpunit --coverage-text"
	},
    "extra": {
        "laravel": {
            "providers": [
                "Marshmallow\\Sluggable\\SluggableServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.3",
        "orchestra/testbench": "^5.0|^6.0"
    }
}
